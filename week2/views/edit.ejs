<% include ./partials/header %>

<div class="ui main test container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label for="blog[title]">title</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>">
      </div>
      <div class="field">
        <label for="blog[image]">image</label>
        <input type="text" name="blog[image]" value="<%= blog.image %>">
      </div>
      <div class="field">
        <label for="blog[body]">body</label>
        <textarea name="blog[body]"><%= blog.body %></textarea>
      </div>
      <div class="field">
        <input class="ui purple basic button big" type="submit">
      </div>
    </form>
  </div>




